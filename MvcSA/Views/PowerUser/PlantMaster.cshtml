<script type="text/javascript">
    $(document).ready(function () {
        $('#jTablePlant').jtable({
            title: 'Plant Master',
            paging: true, //Enable paging
            pageSize: 10, //Set page size (default: 10)
            sorting: true, //Enable sorting
            selecting: true, //Enable selecting
            defaultSorting: 'Sys_Plant_name', //Set default sorting
            actions: {
                listAction: '@Url.Action("PlantList","PowerUser")',
                deleteAction: '@Url.Action("DeletePlant","PowerUser")',
                updateAction: '@Url.Action("UpdatePlant","PowerUser")',
                createAction: '@Url.Action("CreatePlant","PowerUser")'
            },
            fields: {
                Sys_Plant_id: { title: 'ID', key: true },
                Sys_Plant_name: { title: 'Plant Name' },
                update_dt: { title: 'Update Date', type: 'date', displayFormat: 'dd-mm-yy', create: false, edit: false },
                update_by: { title: 'Update By', list: false, create: false, edit: false },
                del_flag: { title: 'Delete', list: false, create: false, edit: false }
            }
        });
        //Load student list from server
        $('#jTablePlant').jtable('load');
    });
</script>

<h2>@ViewBag.Title</h2>

<div id="jTablePlant"></div>
