            $('#divAttach').last().after($('<div style="padding: 5px 0px 5px 0px;"><input type="file" name="files" class="file" /> <button type="button" class="lnkDel btn btn-mini btn-danger"><i class="icon-remove icon-white"></i></button></div>'));
        });
    });
</script>
